{% extends 'base.html.twig' %}

{% block title %}About
{% endblock %}

{% block body %}
    <section class="about-section bottom-line mb-2 d-flex flex-column justify-content-center" style="background-image: url('{{ asset('assets/images/painter.jpg') }}">
        <div class="container">
            <div class="row align-items-center justify-content-between">
                <div class="col-lg-7 intro">
                    <blockquote class="blockquote mb-0">
                        <p class="text-white font-weight-bold mb-4" data-aos="fade-up" data-aos-delay="0">
                            {{ painter.about }}
                        </p>
                        <p class="text-dark fw-bold">
                            {{ painter.firstName }} {{ painter.name }}
                        </p>
                    </blockquote>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
