<section class="blogpost-section mb-2" id="blog-section">
    <div class="container">
        <div class="row">
            <div class="col-7 mb-4">
            <h2 class="font-weight-bold">Last news</h2>
            <p class="text-muted">Far far away, behind the word mountains.</p>
            </div>
        </div>
        <div class="row">
            {% for blogpost in blogposts %}
                <div class="col-md-6 mb-5 mb-lg-0 col-lg-4">
                    <div class="card">  
                        <div class="p-4 bg-white rounded rounded-2">
                            <h5 class="card-title mb-3">{{ blogpost.title }}</h5>
                            <p>{{ blogpost.content|u.truncate(200, '...', false) }}</p>
                            <hr>
                            <p class="text-muted date d-flex justify-content-end">Created at {{ blogpost.createdAt|date('d/m/Y') }}</p> 
                        </div>
                    </div>
                </div>
            {% endfor %}    
        </div>
        <div class="row mt-5">
            <div class="col-lg-12">
                <div class="btn-link d-flex justify-content-center">
                    <a class="btn btn-primary" href="#" role="button">See all posts</a>
                </div>
            </div>
        </div>
    </div>
</section>