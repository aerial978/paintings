{% extends 'base.html.twig' %}

{% block title %}Paintings - Painting
{% endblock %}

{% block body %}
	<section class="painting-section bg-light bottom-line mb-2" id="">
		<div class="container">
			<div class="row">
				<div class="col-7 mb-4">
					<h2 class="font-weight-bold">Latest achievements</h2>
					<p class="text-muted">Far far away, behind the word mountains.</p>
				</div>
			</div>
			<div class="row">
				{% for painting in paintings %}
					<div class="col-12 col-md-6 flex">
						<div class="card mb-5 shadow-lg" style="width: 30rem;">
							<img src="{{ painting.file }}" class="card-img-top" alt="...">
							<div class="card-body">
								<span class="badge bg-secondary mb-3">New</span>
								<h5 class="card-title">{{ painting.name }}</h5>
								<p class="card-text">{{ painting.description|u.truncate(80, '...', false) }}</p>
								<p class="card-text d-flex justify-content-end">
									<small class="text-muted">Created at {{ painting.createdAt|date('d/m/Y') }}</small>
								</p>
							</div>
						</div>
					</div>
				{% endfor %}
				<div class="navigation d-flex justify-content-center mt-5">
					{{ knp_pagination_render(paintings) }}
				</div>
			</div>
		</div>
	</section>
{% endblock %}
