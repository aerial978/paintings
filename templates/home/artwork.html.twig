<section class="artwork-section bg-light" id="">
	<div class="container">
		<div class="row">
			<div class="col-7 mb-4">
				<h2 class="font-weight-bold">Latest achievements</h2>
				<p class="text-muted">Far far away, behind the word mountains.</p>
			</div>
		</div>
		{% for painting in paintings %}
			<div class="card mb-3 shadow-lg mb-4" style="width: 100%;">
				<a href="{{ path('painting.details', {'slug': painting.slug }) }}" class="text-decoration-none text-dark">
					<div class="row g-0">
						<div class="col-md-5">
							<img src="{{ painting.file }}" class="img-fluid rounded-start h-100" alt="...">
						</div>
						<div class="col-md-7">
							<div class="card-body mt-2 p-4 mt-xl-4">
								<span class="badge bg-secondary mb-3">New</span>
								<h5 class="card-title mb-3">{{ painting.name }}</h5>
								<p class="card-text mb-4">{{ painting.description|u.truncate(160, '...', false) }}</p>
								<p class="card-text">
									<small class="text-muted d-flex justify-content-end">Created at
										{{ painting.createdAt|date('d/m/Y') }}</small>
								</p>
							</div>
						</div>
					</div>
				</a>
			</div>
		{% endfor %}
	</div>
</section>
